<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hv_54dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:background="@drawable/shape_black_corners_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view_selected"
        android:layout_width="@dimen/hv_8dp"
        android:layout_height="@dimen/hv_32dp"/>
    <TextView
        android:text="收件箱"
        android:textSize="@dimen/hv_16sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_marginStart="@dimen/hv_36dp"
        android:layout_marginEnd="@dimen/hv_6dp"
        app:layout_constraintEnd_toStartOf="@id/tv_email_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginEnd="@dimen/hv_6dp"
        android:textSize="@dimen/hv_15sp"
        android:textColor="@color/black"
        android:id="@+id/tv_email_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
