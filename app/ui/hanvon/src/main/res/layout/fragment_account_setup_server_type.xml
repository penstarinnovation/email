<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_layout"
        layout="@layout/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Widget.Theme.Email.hvBoldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hv_34dp"
        android:text="@string/account_setup_title"
        android:textSize="@dimen/hv_31sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/hv_31dp">

        <com.hvmail.legacy.view.NodeSeekBar
            android:id="@+id/node_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/hv_70dp"
            android:paddingEnd="@dimen/hv_70dp"
            app:seek_bar_background_color="@color/white"
            app:seek_bar_complete_num="1"
            app:seek_bar_fill_color="@color/black"
            app:seek_bar_height="@dimen/seek_bar_height"
            app:seek_bar_node_radius="@dimen/seek_bar_node_radius"
            app:seek_bar_stroke_width="@dimen/seek_bar_stroke_width"
            app:seek_bar_text_size="@dimen/seek_bar_text_size"
            app:seek_bar_text_top_margin="@dimen/seek_bar_text_top_margin" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/hv_185dp"
        android:layout_marginEnd="@dimen/hv_185dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_incoming_select_pop"
            style="@style/Widget.Theme.Email.hv17Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hv_39dp"
            android:layout_marginTop="@dimen/hv_46dp"
            android:layout_marginEnd="@dimen/hv_39dp"
            android:text="@string/common_incoming_server_pop_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_incoming_select_imap"
            style="@style/Widget.Theme.Email.hv17Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hv_39dp"
            android:layout_marginTop="@dimen/hv_46dp"
            android:layout_marginEnd="@dimen/hv_39dp"
            android:text="@string/common_incoming_server_imap_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_pre"
            style="@style/Widget.Theme.Email.hv17Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hv_46dp"
            android:text="@string/common_button_pre" />


    </LinearLayout>


</LinearLayout>