<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hv_51dp"
    android:gravity="start|center_vertical"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/hv_19dp"
        android:paddingEnd="@dimen/hv_19dp">

        <ImageView
            android:layout_width="@dimen/hv_23dp"
            android:layout_marginTop="@dimen/hv_4dp"
            android:layout_height="@dimen/hv_23dp"
            android:src="@drawable/icon_set" />

        <TextView
            style="@style/Widget.Theme.Email.hv15TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/common_set_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_compose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/hv_19dp"
        android:paddingEnd="@dimen/hv_19dp">

        <ImageView
            android:layout_width="@dimen/hv_23dp"
            android:layout_marginTop="@dimen/hv_4dp"
            android:layout_height="@dimen/hv_23dp"
            android:src="@drawable/icon_send" />

        <TextView
            style="@style/Widget.Theme.Email.hv15TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/common_send_text" />

    </LinearLayout>


</LinearLayout>