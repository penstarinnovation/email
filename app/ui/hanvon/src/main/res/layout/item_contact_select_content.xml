<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/hv_11.5dp"
    android:paddingBottom="@dimen/hv_11.5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/hv_21dp"
        android:layout_height="@dimen/hv_21dp"
        android:src="@drawable/icon_contact_uncheck" />

    <TextView
        android:id="@+id/tv_account"
        style="@style/Widget.Theme.Email.hv17TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hv_23dp"
        android:layout_marginEnd="@dimen/hv_30dp"
        android:layout_weight="2"
        android:gravity="start"
        tools:text="asdasd" />

    <TextView
        android:id="@+id/tv_email_address"
        style="@style/Widget.Theme.Email.hv17TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/hv_30dp"
        android:layout_weight="3"
        android:gravity="start"
        tools:text="cvsa09uhhhjh@qq.com" />

</LinearLayout>