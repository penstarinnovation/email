<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_stroke_1_black_corners_3">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/cl_dialog_head"
            layout="@layout/dialog_email_base_head" />

    </LinearLayout>


    <ImageView
        android:id="@+id/v_dialog_close"
        android:layout_width="@dimen/email_dialog_close_icon"
        android:layout_height="@dimen/email_dialog_close_icon"
        android:layout_marginTop="@dimen/hv_16dp"
        android:layout_marginEnd="@dimen/hv_16dp"
        android:padding="@dimen/email_dialog_close_icon_padding"
        android:src="@drawable/icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>